[Unit]
Description=Restart DBus after deepin Session shutdown

# Allow exit.target to start even if this unit is started with replace-irreversibly.
# For this to work, we also need to be in the root slice.
DefaultDependencies=no

[Service]
Type=notify
ExecStart=/usr/lib/libexec/dde-session-ctl --restart-dbus
Slice=-.slice
